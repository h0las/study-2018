@model TelegramCodeViewModel

@{ViewBag.Title = "Confirm code";}

@section AccountStyles {
    <link href="@Url.Content("~/accountStyles.css")" rel="stylesheet" type="text/css" />
}

<div class="text-center div-center-height-small">
    <h3> We sent the code to your phone number. Please enter it and click "Confirm" </h3>

    <form method="post" asp-controller="Home" asp-action="ConfirmTelegramCode" class="form-signin">
        <div asp-validation-summary="ModelOnly"></div>

        <div>
            <label asp-for="Code"></label>
            <input asp-for="Code" class="form-control" />
            <span asp-validation-for="Code"></span>
        </div>

        <div>
            <input class="btn btn-lg btn-primary btn-block" type="submit" value="Confirm" />
        </div>
    </form>
</div>