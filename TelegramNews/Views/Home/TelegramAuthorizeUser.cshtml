@model TelegramAuthorizeViewModel

@{ViewBag.Title = "Telegram authorize";}

<h2> Please enter your phone number in global format (+7). We sent code in your account. </h2>

<form method="post" asp-controller="Home" asp-action="TelegramAuthorizeUser">
    <div asp-validation-summary="ModelOnly"></div>

    <div>
        <label asp-for="PhoneNumber"></label>
        <input asp-for="PhoneNumber" />
        <span asp-validation-for="PhoneNumber"></span>
    </div>

    <div>
        <input type="submit" value="Send code" />
    </div>
</form>